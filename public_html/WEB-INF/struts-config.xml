<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
    <form-beans>
        <form-bean name="AdminForm" type="anb.bean.AdminForm"/>
        <form-bean name="inputActionForm" type="anb.bean.inputActionForm"/>
        <form-bean name="beanInput" type="anb.general.InputForm"/>
        <form-bean name="beanCambioForm" type="anb.general.CambioForm"/>        
        <form-bean name="beanMenu" type="anb.bean.MenuForm"/>
        <form-bean name="PasswordForm" type="anb.bean.PasswordForm"/>
        <form-bean name="textoForm" type="anb.bean.textoForm"/>
        <form-bean name="reporteForm" type="anb.bean.reporteForm"/>
        <form-bean name="verificaForm" type="anb.bean.verificaForm"/>
        <form-bean name="ParametrosForm" type="anb.bean.ParametrosForm"/>
        <form-bean name="consultaForm" type="anb.bean.consultaForm"/>
        <form-bean name="carpetaForm" type="anb.bean.carpetaForm"/>
        <form-bean name="asicarForm" type="anb.bean.asicarForm"/>
        <form-bean name="discarForm" type="anb.bean.discarForm"/>
        <form-bean name="connitForm" type="anb.bean.connitForm"/>
        <form-bean name="condisForm" type="anb.bean.condisForm"/>
    </form-beans>
    <global-forwards>
        <forward name="password" path="pagina.password"/>
        <forward name="logout" path="/Login.jsp"/>
        <forward name="parametros" path="pagina.parametros"/>
        <forward name="reporte" path="pagina.reporte"/>
        <forward name="verifica" path="pagina.verifica"/>
        <forward name="texto" path="pagina.texto"/>
        <forward name="carpetas" path="pagina.carpetas"/>
        <forward name="consulta" path="pagina.consulta"/>
        <forward name="asicar" path="pagina.asicar"/>
        <forward name="discar" path="pagina.discar"/>
        <forward name="connit" path="pagina.connit"/>
        <forward name="condis" path="pagina.condis"/>
        <forward name="inicial" path="pagina.inicial"/>
    </global-forwards>
    <action-mappings>
        <action path="/MenuAction" type="anb.general.MenuAction" name="beanMenu" scope="request">
            <forward name="log" path="/log.do" redirect="true"/>
            <forward name="usuario" path="demo.user.mod"/>
            <forward name="account" path="/account.do" redirect="true"/>
            <forward name="password" path="/passwordidx.do" redirect="true"/>
        </action>
        <action path="/logout" type="anb.general.LogoutAction" scope="request">
            <forward name="login" path="/input.jsp" redirect="true"/>
        </action>
        <action path="/log" type="anb.general.LogAction" scope="request">
            <forward name="log" path="demo.log"/>
        </action>
        <action path="/CambioAction" type="anb.general.CambioAction" name="beanCambioForm" scope="request"
                input="aud.user.mod">
            <forward name="usuario" path="aud.home"/>
            <forward name="cambio" path="demo.user.mod"/>
        </action>
        <action path="/ingreso" type="anb.general.InputAction" name="beanInput" scope="request">
            <forward name="ok" path="aud.home" redirect="true"/>
            <forward name="nook" path="/input.jsp"/>
        </action>
        <!-- ADMIN -->
        <action path="/account" type="anb.action.AdminAction" name="AdminForm" parameter="account" scope="request">
            <forward name="ok" path="admin.account" redirect="true"/>
            <forward name="nook" path="/input.jsp"/>
        </action>
        <action path="/passwordidx" type="anb.action.AdminAction" name="AdminForm" parameter="passwordidx"
                scope="request">
            <forward name="ok" path="admin.password" redirect="true"/>
            <forward name="nook" path="/input.jsp"/>
        </action>
        <action path="/password" type="anb.action.AdminAction" name="AdminForm" parameter="password" scope="request">
            <forward name="ok" path="admin.password" redirect="true"/>
            <forward name="nook" path="/input.jsp"/>
        </action>
        <!-- CAD    -->
        <action path="/texto" type="cad.textoAction" name="textoForm" scope="request"/>
        <action path="/generar" type="cad.generarAction" name="generarForm" scope="request"/>
        <action path="/reporte" type="cad.reporteAction" name="reporteForm" scope="request"/>
        <action path="/verifica" type="cad.verificaAction" name="verificaForm" scope="request"/>
        <action path="/parametros" type="cad.ParametrosAction" name="ParametrosForm" scope="request"/>
        <action path="/consulta" type="cad.consultaAction" name="consultaForm" scope="request"/>
        <action path="/carpeta" type="cad.carpetaAction" name="carpetaForm" scope="request"/>
        <action path="/asicar" type="cad.asicarAction" name="asicarForm" scope="request"/>
        <action path="/discar" type="cad.discarAction" name="discarForm" scope="request"/>
        <action path="/connit" type="cad.connitAction" name="connitForm" scope="request"/>
        <action path="/condis" type="cad.condisAction" name="condisForm" scope="request"/>
    </action-mappings>
    <controller nocache="true" processorClass="anb.general.AnbRequestProcessor"/>
    <message-resources parameter="anb.general.config"/>
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property value="/WEB-INF/tiles-defs.xml" property="definitions-config"/>
        <set-property value="2" property="definitions-debug"/>
        <set-property value="1" property="definitions-parser-details"/>
        <set-property value="true" property="definitions-parse-validate"/>
    </plug-in>
</struts-config>

